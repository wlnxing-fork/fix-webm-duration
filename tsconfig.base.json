        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@fix-webm-duration/fix": ["packages/fix/src/index.ts"],
            "@fix-webm-duration/parser": ["packages/parser/src/index.ts"],
            "@fix-webm-duration/react-viewer": ["packages/react-viewer/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
